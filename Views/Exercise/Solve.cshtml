@model WebsiteHotrohoctap.Models.ViewModels.ExamViewModel

@{
    ViewData["Title"] = "Giải bài";
    var languageMap = new Dictionary<string, string>
    {
        { "python3", "Python 3" },
        { "cpp17", "C++17" }
    };
}

<style>
    .container {
        display: flex;
        max-width: 1200px;
        margin: 20px auto;
        gap: 20px;
        font-family: Arial, sans-serif;
    }

    .problem-description {
        flex: 1;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 5px;
        max-width: 50%;
    }

    .code-editor {
        flex: 1;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 2px;
        max-width: 50%;
    }

    .editor-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .language-select {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    textarea {
        width: 100%;
        height: 200px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-family: 'Consolas', 'Monaco', monospace;
        background-color: #f9f9f9;
        resize: vertical;
    }

    .input-output {
        margin-top: 10px;
    }

        .input-output textarea {
            height: 100px;
        }

    .run-button, .submit-button {
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .run-button {
        background-color: #2ecc71;
        color: white;
        margin-right: 10px;
    }

        .run-button:hover {
            background-color: #27ae60;
        }

    .submit-button {
        background-color: #3498db;
        color: white;
    }

        .submit-button:hover {
            background-color: #2980b9;
        }

    #output {
        margin-top: 10px;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 3px;
        white-space: pre-wrap;
    }

    .result-accepted {
        color: #2ecc71;
    }

    .result-wrong {
        color: #e74c3c;
    }

    .result-error {
        color: #e67e22;
    }
</style>

<div class="container">
    <div class="problem-description">
        <h2>Mô tả bài tập</h2>
        <p>@(Model.ProblemDescription ?? "Không có mô tả.")</p>

        <h3>Input mẫu</h3>
        <pre>@(Model.SampleInput ?? "Không có input mẫu.")</pre>

        <h3>Output mẫu</h3>
        <pre>@(Model.SampleOutput ?? "Không có output mẫu.")</pre>
    </div>

    <div class="code-editor">
        <div class="editor-header">
            <select name="language" id="language" class="language-select">
                @foreach (var lang in languageMap)
                {
                    <option value="@lang.Key" selected="@(lang.Key == "python3" ? "selected" : null)">@lang.Value</option>
                }
            </select>
            <div>
                <button type="button" id="runCodeBtn" class="run-button">Run Code</button>
                <button type="button" id="submitCodeBtn" class="submit-button">Submit Code</button>
            </div>
        </div>

        <textarea name="code" id="code" placeholder="Nhập code của bạn...">print(sum(list(map(int, input().split()))))</textarea>

        <div class="input-output">
            <label for="input">Input (tùy ý):</label>
            <textarea name="input" id="input" placeholder="Nhập input tùy ý...">@(Model.SampleInput ?? "")</textarea>
        </div>

        <div id="output"></div>
        <input type="hidden" name="examId" value="@Model.ExamID" />
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#runCodeBtn').click(function () {
                var formData = $('textarea[name="code"], textarea[name="input"], select[name="language"], input[name="examId"]').serialize();
                console.log("Sending data (Run):", formData);

                $.ajax({
                    url: '@Url.Action("RunCode", "Exercise")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        console.log("Response:", response);
                        if (response.success) {
                            $('#output').html('<strong>Kết quả:</strong><pre>' + response.output + '</pre>');
                        } else {
                            $('#output').html('<strong>Lỗi:</strong><pre>' + response.error + '</pre>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log("AJAX error:", status, error);
                        $('#output').html('<strong>Lỗi hệ thống:</strong><pre>' + error + '</pre>');
                    }
                });
            });

            $('#submitCodeBtn').click(function () {
                var formData = $('textarea[name="code"], select[name="language"], input[name="examId"]').serialize();
                console.log("Sending data (Submit):", formData);

                $.ajax({
                    url: '@Url.Action("SubmitCode", "Exercise")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        console.log("Response:", response);
                        if (response.success) {
                            let statusClass = '';
                            if (response.status === 'Accepted') statusClass = 'result-accepted';
                            else if (response.status === 'Wrong Answer') statusClass = 'result-wrong';
                            else if (response.status === 'Runtime Error') statusClass = 'result-error';

                            $('#output').html('<strong>Kết quả nộp bài:</strong><br>' +
                                '<span class="' + statusClass + '">Trạng thái: ' + response.status + '</span><br>' +
                                'Số test case vượt qua: ' + response.passed + '/' + response.total + '<br>' +
                                'Điểm: ' + response.score);
                        } else {
                            $('#output').html('<strong>Lỗi:</strong><pre>' + response.error + '</pre>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log("AJAX error:", status, error);
                        $('#output').html('<strong>Lỗi hệ thống:</strong><pre>' + error + '</pre>');
                    }
                });
            });
        });
    </script>
}