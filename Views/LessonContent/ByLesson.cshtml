@model IEnumerable<WebsiteHotrohoctap.Models.LessonContent>

@{
    ViewData["Title"] = "Nội dung bài học";
    var lesson = ViewBag.Lesson as WebsiteHotrohoctap.Models.Lesson;
}

<h2 class="mb-4 text-center">@lesson?.LessonName</h2>

<div class="container">
    @foreach (var content in Model)
    {
        <div class="mb-4">
            <div class="text-center">
                @if (content.ContentType == "text")
                {
                    <p class="card-text text-start" style="white-space: pre-line;">@content.ContentData</p>
                }
                else if (content.ContentType == "image")
                {
                    <img src="@content.ContentData" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;" alt="Ảnh bài học" />
                }
                else if (content.ContentType == "video")
                {
                    if (!string.IsNullOrWhiteSpace(content.ContentData) && content.ContentData.Contains("youtube"))
                    {
                        <div class="ratio ratio-16x9" style="max-width: 720px; margin: auto;">
                            <iframe src="@content.ContentData" allowfullscreen style="border: none;"></iframe>
                        </div>
                    }
                    else
                    {
                        <video controls class="rounded" style="width: 100%; max-width: 720px; max-height: 400px; object-fit: contain; margin: auto; display: block;">
                            <source src="@content.ContentData" type="video/mp4" />
                            Trình duyệt không hỗ trợ video.
                        </video>
                    }
                }
            </div>
        </div>
    }
</div>
