@model WebsiteHotrohoctap.Models.ExamContent

@{
    ViewData["Title"] = "Xóa câu hỏi";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f8fafc;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white p-5 rounded shadow">
                <h2 class="text-center text-danger fw-bold mb-4">⚠️ Xác nhận xóa câu hỏi</h2>

                <p class="text-center text-muted mb-4">Bạn có chắc chắn muốn xóa câu hỏi này? Thao tác này không thể hoàn tác.</p>

                <!-- Thông tin câu hỏi -->
                <dl class="row mb-4">
                    <dt class="col-sm-4 fw-semibold">Loại câu hỏi</dt>
                    <dd class="col-sm-8">Viết mã lệnh</dd>

                    <dt class="col-sm-4 fw-semibold">Nội dung câu hỏi</dt>
                    <dd class="col-sm-8">@Model.QuestionText</dd>

                    <dt class="col-sm-4 fw-semibold">Thuộc bài kiểm tra</dt>
                    <dd class="col-sm-8">@Model.Exam?.ExamName</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ExamContentID" />
                    <input type="submit" value="Xóa câu hỏi" class="btn btn-outline-danger btn-lg rounded-pill px-4 fw-semibold shadow-sm me-2" />
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4 fw-semibold">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}