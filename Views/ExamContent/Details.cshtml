@model WebsiteHotrohoctap.Models.ExamContent

@{
    ViewData["Title"] = "Chi tiết câu hỏi";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">📋 Chi tiết câu hỏi</h2>

    <div class="card shadow-sm rounded p-4">
        <dl class="row">
            <!-- Loại câu hỏi -->
            <dt class="col-sm-3">Loại câu hỏi</dt>
            <dd class="col-sm-9">
                @(Model.QuestionType == "MultipleChoice" ? "Trắc nghiệm" : "Viết mã lệnh")
            </dd>

            <!-- Nội dung câu hỏi -->
            <dt class="col-sm-3">Nội dung câu hỏi</dt>
            <dd class="col-sm-9">@Model.QuestionText</dd>

            @if (Model.QuestionType == "MultipleChoice")
            {
                <!-- Các lựa chọn -->
                <dt class="col-sm-3">Các lựa chọn</dt>
                <dd class="col-sm-9">
                    <ul class="list-group list-group-flush">
                        @for (int i = 0; i < (Model.Options?.Count ?? 0); i++)
                        {
                            <li class="list-group-item">
                                <strong>@(i + 1).</strong> @Model.Options[i]
                            </li>
                        }
                    </ul>
                </dd>

                <!-- Đáp án đúng -->
                @if (!string.IsNullOrWhiteSpace(Model.CorrectAnswer))
                {
                    <dt class="col-sm-3">Đáp án đúng</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-success">@Model.CorrectAnswer</span>
                    </dd>
                }
            }
            else if (Model.QuestionType == "Code")
            {
                <!-- Ngôn ngữ lập trình -->
                <dt class="col-sm-3">Ngôn ngữ lập trình</dt>
                <dd class="col-sm-9">@Model.Language</dd>

                <!-- Starter Code -->
                @if (!string.IsNullOrWhiteSpace(Model.StarterCode))
                {
                    <dt class="col-sm-3">Starter Code</dt>
                    <dd class="col-sm-9">
                        <pre class="bg-light p-3 rounded">@Model.StarterCode</pre>
                    </dd>
                }

                <!-- Input mẫu -->
                @if (!string.IsNullOrWhiteSpace(Model.SampleInput))
                {
                    <dt class="col-sm-3">Input mẫu</dt>
                    <dd class="col-sm-9">
                        <pre class="bg-light p-3 rounded">@Model.SampleInput</pre>
                    </dd>
                }

                <!-- Output mẫu -->
                @if (!string.IsNullOrWhiteSpace(Model.SampleOutput))
                {
                    <dt class="col-sm-3">Output mẫu</dt>
                    <dd class="col-sm-9">
                        <pre class="bg-light p-3 rounded">@Model.SampleOutput</pre>
                    </dd>
                }

                <!-- Đáp án mẫu -->
                @if (!string.IsNullOrWhiteSpace(Model.CorrectAnswer))
                {
                    <dt class="col-sm-3">Đáp án mẫu</dt>
                    <dd class="col-sm-9">
                        <pre class="bg-light p-3 rounded">@Model.CorrectAnswer</pre>
                    </dd>
                }
            }

            <!-- Thuộc bài kiểm tra -->
            <dt class="col-sm-3">Thuộc bài kiểm tra</dt>
            <dd class="col-sm-9">@Model.Exam?.ExamName</dd>
        </dl>
    </div>

    <!-- Nút thao tác -->
    <div class="mt-4 text-center">
        <a asp-action="Update" asp-route-id="@Model.ExamContentID" class="btn btn-warning rounded-pill me-2">✏️ Sửa</a>
        <a asp-action="Index" class="btn btn-secondary rounded-pill">⬅️ Quay lại danh sách</a>
    </div>
</div>
