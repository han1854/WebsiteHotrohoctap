@model IEnumerable<WebsiteHotrohoctap.Models.ExamContent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exam.ExamID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExamContentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExamContentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExamContentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
