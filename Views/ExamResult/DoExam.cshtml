@model WebsiteHotrohoctap.Models.Exam

@{
    ViewData["Title"] = "Làm bài thi";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">🎯 Làm bài kiểm tra: @Model.ExamName</h2>
        <p class="text-muted">@Model.Description</p>
    </div>

    <form method="post" asp-action="SubmitExam" id="examForm">
        <input type="hidden" name="examId" value="@Model.ExamID" />

        @if (Model.ExamContents != null && Model.ExamContents.Any())
        {
            <div class="d-flex flex-column gap-4">
                @for (int i = 0; i < Model.ExamContents.Count; i++)
                {
                    var question = Model.ExamContents[i];
                    var questionType = question.QuestionType;

                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold mb-3">Câu hỏi @((i + 1)): @question.QuestionText</h5>

                            @if (questionType == "MultipleChoice")
                            {
                                <div>
                                    @foreach (var option in question.Options)
                                    {
                                        var optionId = $"option_{i}_{option.GetHashCode()}"; // Dùng GetHashCode() để tạo id duy nhất
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="answers[@i]" value="@option" id="@optionId" />
                                            <label class="form-check-label" for="@optionId">
                                                @option
                                            </label>
                                        </div>
                                    }
                                </div>
                            }
                            else if (questionType == "Code")
                            {
                                <div>
                                    <label for="code_@i">Viết mã của bạn:</label>
                                    <textarea class="form-control" name="codes[@i]" id="code_@i" rows="6"></textarea>
                                </div>
                            }

                            <div class="mt-2 text-muted">
                                <small><i>Loại câu hỏi: @(questionType == "MultipleChoice" ? "Trắc nghiệm" : "Viết mã")</i></small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">Không có câu hỏi nào trong bài thi này.</p>
        }

        <div class="text-center mt-5">
            <button type="submit" class="btn btn-primary rounded-pill px-4">Nộp bài</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
