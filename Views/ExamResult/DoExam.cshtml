@model WebsiteHotrohoctap.Models.Exam

@{
    ViewData["Title"] = "Làm bài thi";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">@Model.ExamName</h2>
        <p class="text-muted">@Model.Description</p>
    </div>

    <form method="post" asp-action="SubmitExam" asp-route-examId="@Model.ExamID">
        @foreach (var question in Model.ExamContents)
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">Câu hỏi: @question.QuestionText</h5>
                </div>

                <div class="card-body">
                    @if (question.QuestionType == "MultipleChoice")
                    {
                        <div class="form-group">
                            @for (int i = 0; i < (question.Options?.Count ?? 0); i++)
                            {
                                var option = question.Options[i];
                                var inputId = $"option_{question.ExamContentID}_{i}";
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" id="@inputId" name="answers[@question.ExamContentID]" value="@option" />
                                    <label class="form-check-label" for="@inputId">@option</label>
                                </div>
                            }
                        </div>
                    }
                    else if (question.QuestionType == "Code")
                    {
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(question.SampleInput))
                            {
                                <label class="fw-bold">Input yêu cầu:</label>
                                <pre class="bg-light p-3 rounded">@question.SampleInput</pre>
                            }

                            @if (!string.IsNullOrEmpty(question.ExpectedOutput))
                            {
                                <label class="fw-bold">Output mong đợi:</label>
                                <pre class="bg-light p-3 rounded">@question.ExpectedOutput</pre>
                            }
                        </div>

                        <div class="form-group">
                            <label class="fw-bold" for="codeInput_@question.ExamContentID">Viết mã:</label>
                            <textarea class="form-control border rounded"
                                      name="codes[@question.ExamContentID]"
                                      id="codeInput_@question.ExamContentID"
                                      rows="10"
                                      style="background-color: #f9fafb; font-family: Consolas, monospace;"
                                      placeholder="Nhập đoạn mã của bạn tại đây..."></textarea>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg rounded-pill px-5 shadow-sm">Nộp bài</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
