@model WebsiteHotrohoctap.Models.ExamResult

@{
    ViewData["Title"] = "Chỉnh sửa kết quả thi";
}

<div class="container mt-4">
    <h2 class="text-center">Chỉnh sửa kết quả bài thi</h2>

    <form method="post" asp-action="Update" asp-route-id="@Model.ResultID">
        <div class="form-group">
            <label for="score">Điểm</label>
            <input type="number" class="form-control" id="score" name="Score" value="@Model.Score" required />
        </div>

        <div class="form-group">
            <label for="status">Trạng thái</label>
            <select class="form-control" id="status" name="Status" required>
                <option value="Completed" selected="@((Model.Status == "Completed") ? "selected" : "")">Hoàn thành</option>
                <option value="InProgress" selected="@((Model.Status == "InProgress") ? "selected" : "")">Đang làm</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    </form>
</div>
