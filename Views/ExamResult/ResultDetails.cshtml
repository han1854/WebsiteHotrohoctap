@model WebsiteHotrohoctap.Models.ExamResult

@{
    ViewData["Title"] = "Kết quả bài thi";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">🎯 Kết quả bài thi</h2>
        <h4 class="text-muted">@Model.Exam?.ExamName</h4>
        <p class="mt-3 fs-5"><strong>Điểm số:</strong> @Model.Score</p>
        <p class="fs-5"><strong>Trạng thái:</strong> @Model.Status</p>
    </div>

    @if (Model.Exam?.ExamContents != null && Model.Exam.ExamContents.Any())
    {
        <div class="d-flex flex-column gap-4">
            @for (int i = 0; i < Model.Exam.ExamContents.Count; i++)
            {
                var question = Model.Exam.ExamContents[i];
                var userCode = Model.Code?.Split(';').ElementAtOrDefault(i);
                var userOutput = Model.Output?.Split(';').ElementAtOrDefault(i);
                var expectedOutput = question.ExpectedOutput;
                bool isCorrect = userOutput == expectedOutput;

                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="fw-semibold mb-3">Câu hỏi @((i + 1)): @question.QuestionText</h5>

                        @if (isCorrect)
                        {
                            <p class="mb-0">
                                <span class="badge bg-success">Đúng</span>
                            </p>
                            <p class="mt-2">
                                <strong>Output mong đợi:</strong>
                                <span class="text-success fw-bold">@expectedOutput</span>
                            </p>
                        }
                        else
                        {
                            <p class="mb-0">
                                <span class="badge bg-danger">Sai</span>
                            </p>
                            <p class="mt-2">
                                <strong>Output của bạn:</strong>
                                <span class="text-danger fw-bold">@userOutput</span>
                            </p>
                            <p>
                                <strong>Output mong đợi:</strong>
                                <span class="text-success fw-bold">@expectedOutput</span>
                            </p>
                        }

                        <p class="mt-2">
                            <strong>Mã code của bạn:</strong>
                            <pre class="bg-light p-2 rounded small">@userCode</pre>
                        </p>

                        <div class="mt-2 text-muted">
                            <small><i>Loại câu hỏi: Viết mã</i></small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">Không có câu hỏi nào trong bài thi này.</p>
    }

    <div class="text-center mt-5">
        <a asp-controller="Exercise" asp-action="Index" class="btn btn-secondary rounded-pill px-4">⬅️ Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}