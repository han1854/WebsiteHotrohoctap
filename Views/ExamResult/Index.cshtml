@model IEnumerable<WebsiteHotrohoctap.Models.ExamResult>

@{
    ViewData["Title"] = "Danh sách kết quả thi";
}

<div class="container mt-4">
    <h2 class="text-center">Danh sách kết quả thi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Người dùng</th>
                <th>Bài thi</th>
                <th>Điểm</th>
                <th>Trạng thái</th>
                <th>Ngày làm bài</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.User.UserName</td>
                    <td>@result.Exam.ExamName</td>
                    <td>@string.Format("{0:F2}", result.Score / 100.0)</td>
                    <td>@result.Status</td>
                    <td>@result.ExamDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a href="@Url.Action("ResultDetails", "ExamResult", new { id = result.ResultID })" class="btn btn-info">Xem chi tiết</a>
                        <a href="@Url.Action("Update", "ExamResult", new { id = result.ResultID })" class="btn btn-warning">Chỉnh sửa</a>
                        <a href="@Url.Action("Delete", "ExamResult", new { id = result.ResultID })" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
