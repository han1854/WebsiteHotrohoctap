@model WebsiteHotrohoctap.Models.Exam
@{
    ViewData["Title"] = "Tạo Bài Tập Mới";
}

<h1>Tạo bài tập mới</h1>

<form asp-action="CreateExam" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="form-group">
        <label asp-for="ExamName" class="control-label"></label>
        <input asp-for="ExamName" class="form-control" />
        <span asp-validation-for="ExamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalMarks" class="control-label"></label>
        <input asp-for="TotalMarks" class="form-control" />
        <span asp-validation-for="TotalMarks" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="LessonID" class="control-label">LessonID</label>
        <select asp-for="LessonID" class="form-select" asp-items="ViewBag.Lessons">
            <option value="">-- Chọn bài học --</option>
        </select>
        <span asp-validation-for="LessonID" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Tạo" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
