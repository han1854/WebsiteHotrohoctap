@model IEnumerable<WebsiteHotrohoctap.Models.Course>

@{
    ViewData["Title"] = "Danh sách khóa học";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-gradient">📘 Danh sách khóa học</h3>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-outline-primary rounded-pill shadow-sm">
                ➕ Thêm mới
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col">
                <!-- Bọc toàn bộ card trong một link để nhấp vào đâu cũng vào trang Details -->
                <a asp-action="Details" asp-route-id="@item.CourseID" class="card-link">
                    <div class="card shadow-sm rounded">
                        <div class="card-img-top" style="background-color: #1e3a8a; height: 200px; display: flex; justify-content: center; align-items: center;">
                            <span class="text-white" style="font-size: 1.5rem; font-weight: bold;">@item.CourseName</span>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h5 class="card-title">@item.CourseName</h5>
                            <!--<p class="card-text">@item.Description</p>-->
                                <div class="d-flex justify-content-center gap-2">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Update" asp-route-id="@item.CourseID" class="btn btn-outline-warning btn-sm rounded-pill">Sửa</a>
                                }
                                    <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-outline-info btn-sm rounded-pill text-info">Xem chi tiết</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-outline-danger btn-sm rounded-pill" >Xóa</a>
                                }
                                </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
