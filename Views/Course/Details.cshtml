@model WebsiteHotrohoctap.Models.Course

@{
    ViewData["Title"] = "Chi tiết khóa học";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f0f9ff;
    }

    .course-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .course-title {
        font-weight: 700;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 10px;
        margin-bottom: 20px;
        color: #1e3a8a;
    }

    .course-description {
        font-size: 1.1rem;
        color: #334155;
    }

    .btn-join {
        padding: 10px 30px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 50px;
    }

    .btn-outline-warning {
        border-radius: 50px;
    }

    .back-link {
        color: #1e3a8a;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="course-card">
                <!-- Tên khóa học -->
                <h2 class="course-title">@Model.CourseName</h2>

                <!-- Mô tả khóa học -->
                <p class="course-description">@Model.Description</p>

                <!-- Nút tham gia -->
                <div class="text-center my-4">
                    <form asp-controller="Enrollment" asp-action="Register" method="post">
                        <input type="hidden" name="courseId" value="@Model.CourseID" />
                        <button type="submit" class="btn btn-primary btn-lg btn-join shadow">
                            Tham gia khóa học
                        </button>
                    </form>
                </div>

                <!-- Nút điều hướng -->
                <div class="d-flex justify-content-between">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Update" asp-route-id="@Model.CourseID" class="btn btn-outline-warning btn-sm rounded-pill">
                           Sửa
                        </a>
                    }
                    <a asp-action="Index" class="back-link">← Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>
