@model IEnumerable<WebsiteHotrohoctap.Models.Exam>

@{
    ViewData["Title"] = "Danh sách bài tập";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-gradient">Danh sách bài tập</h3>
        <a asp-action="Create" class="btn btn-outline-primary rounded-pill shadow-sm">➕ Thêm bài tập</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm rounded bg-white">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>Tên bài tập</th>
                    <th>Mô tả</th>
                    <th>Tổng điểm</th>
                    <th>Thuộc bài học</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle text-center">
                        <td>@item.ExamName</td>
                        <td class="text-start">@item.Description</td>
                        <td>@item.TotalMarks</td>
                        <td>@item.Lesson?.LessonName</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <a asp-action="Update" asp-route-id="@item.ExamID" class="btn btn-sm btn-outline-warning rounded-pill">Sửa</a>
                                <a asp-controller="ExamContent" asp-action="Index" asp-route-id="@item.ExamID" class="btn btn-sm btn-outline-info rounded-pill">Câu hỏi</a>
                                <a asp-action="Delete" asp-route-id="@item.ExamID" class="btn btn-sm btn-outline-danger rounded-pill">Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



