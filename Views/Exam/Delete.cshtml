@model WebsiteHotrohoctap.Models.Exam

@{
    ViewData["Title"] = "Xóa Bài Tập";
}

<h2 class="mb-4">Xóa Bài Tập</h2>

<div class="card shadow p-4 mb-5 bg-white rounded">
    <div class="alert alert-warning">
        <strong>Bạn có chắc chắn muốn xóa bài tập này không?</strong>
    </div>

    <div class="mb-3">
        <strong>Tên bài thi:</strong> @Model.ExamName
    </div>

    <div class="mb-3">
        <strong>Mô tả:</strong>

        @Model.Description

    </div>

    <div class="mb-3">
        <strong>Tổng điểm:</strong> @Model.TotalMarks
    </div>

    <div class="mb-3">
        <strong>Thuộc bài học:</strong> @Model.Lesson?.LessonName
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
        <input type="hidden" asp-for="ExamID" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">← Quay lại danh sách</a>
    </form>
</div>



