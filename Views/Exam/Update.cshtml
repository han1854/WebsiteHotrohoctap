@model WebsiteHotrohoctap.Models.Exam

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
