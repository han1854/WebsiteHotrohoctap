@model WebsiteHotrohoctap.Models.Lesson

@{
    ViewData["Title"] = "Cập nhật bài học";
}

<h2 class="text-center">Cập nhật bài học</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden field for LessonID -->
            <input type="hidden" asp-for="LessonID" />

            <!-- Tên bài học -->
            <div class="form-group mb-3">
                <label asp-for="LessonName" class="control-label">Tên bài học</label>
                <input asp-for="LessonName" class="form-control" placeholder="Nhập tên bài học" />
                <span asp-validation-for="LessonName" class="text-danger"></span>
            </div>

            <!-- Mô tả bài học -->
            <div class="form-group mb-3">
                <label asp-for="LessonDescription" class="control-label">Mô tả bài học</label>
                <textarea asp-for="LessonDescription" class="form-control" placeholder="Nhập mô tả bài học" rows="5"></textarea>
                <span asp-validation-for="LessonDescription" class="text-danger"></span>
            </div>

            <!-- Khóa học -->
            <div class="form-group mb-3">
                <label asp-for="CourseID" class="control-label">Khóa học</label>
                <select asp-for="CourseID" class="form-select" asp-items="ViewBag.Courses">
                    <option value="">-- Chọn khóa học --</option>
                </select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>

            <!-- Nút submit -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill shadow-sm">Cập nhật bài học</button>
            </div>
        </form>

    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">Quay lại danh sách bài học</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
